<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>


  <div id="login" class="login">


    <form>

      <fieldset>

        <p>
          <%= f.input :user_name, input_html: { class: 'login-form-block' },
                      :autofocus=>true, label: false, placeholder: "User Name",
                      :hint => "Your User Name will also be your link" %>

        </p>

        <p>
          <%= f.input :first_name, input_html: { class: 'login-form-block' },
                      label: false, placeholder: "First Name" %>
        </p>

        <p>
          <%= f.input :email, input_html: { class: 'login-form-block' },
                      label: false, placeholder: "Email Address" %>
        </p>

        <p>
          <%= f.input :password, input_html: { class: 'login-form-block' },
                      label: false, placeholder: "Password" %>
        </p>

        <p>
          <%= f.input :password_confirmation, input_html: { class: 'login-form-block' },
                      label: false, placeholder: "Password Confirmation" %>
        </p>


        <p>
          <%= f.submit "Sign up", class: "btn btn-info btn-embossed btn-block" %>
        </p>

      </fieldset>

    </form>

    <p><span class="btn-round">or</span></p>

    <p>

      <%= link_to user_omniauth_authorize_path(:facebook),
                  class: "btn btn-embossed btn-social-facebook btn-block" do %>
        <i class="icon-facebook"></i> | Connect with Facebook
      <% end %>

    </p>


  </div> <!-- end login -->


<% end %>

<%= render "devise/shared/links" %>