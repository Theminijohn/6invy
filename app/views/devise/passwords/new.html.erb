<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div id="login" class="login hero-unit">

    <b>Forgot your Password?</b><br>
    <small>Enter your email address and we'll send you a link to reset your password.</small>

    <br>

    <form>

      <fieldset>

        <p>
          <%= f.input :email, input_html: { class: 'login-form-block' },
                      :autofocus=>true, label: false, placeholder: "Email" %>
        </p>

        <p>
        <%= f.submit "Send me reset password instructions",
                     class: "btn btn-info btn-block btn-embossed" %>
        </p>

      </fieldset>

    </form>
  </div>

<% end %>

<%= render "devise/shared/links" %>



