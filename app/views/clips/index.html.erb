
<div class="row-fluid">

  <div class="span3">

    <% if user_signed_in? %>
    <div class="media">
        <%= link_to (image_tag current_user.avatar(:avatar)), current_user,
                    class: "media-object pull-left user-media-object" %>
      <div class="media-body">
        <h6 class="user-heading">
          <%= current_user.first_name %>
          <%= current_user.last_name %>
        </h6>
      </div>
    </div>
    <br>
    <% end %>


    <%= link_to "Shows", shows_path, class: "btn btn-info btn-embossed btn-block" %>

  </div>

  <div class="span9">

    <% unless user_signed_in? %>
      <%= render 'pages/home' %>
    <% end %>

    <div id="clips-masonry">
      <%= render @clips %>
    </div>

    <%= will_paginate @clips %>

  </div>


</div>


