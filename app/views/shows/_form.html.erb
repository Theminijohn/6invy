<%= simple_form_for(@show, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <!-- Cover Uploading Field -->
  <div class="control-group">
    <label class="control-label">Upload a Cover</label>
    <div class="controls">
      <%= f.input :cover, label: false %>
    </div>
  </div>

  <!-- Avatar Uploading Field -->
  <div class="control-group">
    <label class="control-label">Upload an Avatar</label>
    <div class="controls">
      <%= f.input :avatar, label: false %>
    </div>
  </div>

  <!-- Show Name Field -->
  <div class="control-group">
    <label class="control-label">Your Show's Name</label>
    <div class="controls">
      <%= f.input :name, label: false %>
    </div>
  </div>

  <!-- Show Title Field -->
  <div class="control-group">
    <label class="control-label">Your Show's Title</label>
    <div class="controls">
      <%= f.input :show_title, label: false %>
    </div>
  </div>

  <!-- Show Announcement Field -->
  <div class="control-group">
    <label class="control-label">Show Announcement</label>
    <div class="controls">
      <%= f.input :announcement, as: :text, input_html: { rows: "3" }, label: false %>
    </div>
  </div>

  <!-- Facebook Link Field -->
  <div class="control-group">
    <label class="control-label">Your Facebook Link</label>
    <div class="controls">
      <%= f.input :facebook_link, label: false %>
    </div>
  </div>

  <!-- Twitter Link Field -->
  <div class="control-group">
    <label class="control-label">Your Twitter Link</label>
    <div class="controls">
      <%= f.input :twitter_link, label: false %>
    </div>
  </div>

  <!-- Instagram Link Field -->
  <div class="control-group">
    <label class="control-label">Your Instagram Link</label>
    <div class="controls">
      <%= f.input :instagram_link, label: false %>
    </div>
  </div>



  <div class="form-actions">
    <%= button_tag(type: 'submit', class: "btn btn-primary btn-embossed") do %>
      <i class="fui-check pull-right"></i> Update
    <% end %>

    <%= link_to "#ShowDelete", title: "Delete your Clip",
                :data => {:toggle=>"modal"}, class: "btn btn-embossed btn-danger" do %>
      <i class="fui-trash"></i> Delete
    <% end %>



    <div id="ShowDelete" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close fui-cross" data-dismiss="modal" aria-hidden="true"></button>
        <h3 id="myModalLabel"><%= @show.name %></h3>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to Delete your Show?
        </p>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= link_to @show, method: :delete,
                    class: "btn btn-danger" do %>
          <i class="fui-trash "></i> Delete
        <% end %>
      </div>
    </div>


  </div>
<% end %>
